{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dev",
    "dist",
    "build",
    "tests",
    "**/*.spec.js",
    "**/*.spec.ts",
    "node_modules",
    "eslint.config.js"
  ]
}
